.mine-edit .enter-btn {
  margin: 40rpx auto;
  width: 90%;
  background-color: #e64340;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 10rpx;
}
.mine-edit .avator-box {
  padding: 100rpx 0;
}
.mine-edit .avator-box .avator-btn .avatar-image {
  display: block;
  width: 56px;
  height: 56px;
  margin: 0 auto;
}
.mine-edit .form-item {
  display: flex;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 30rpx;
}
.mine-edit .form-item-label {
  flex: 0 160rpx;
}
